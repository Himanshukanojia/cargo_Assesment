<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#313133">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_thin"
            android:text="NYC"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/lane"
            android:layout_width="185dp"
            android:layout_height="29dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="64dp"
            android:layout_toStartOf="@+id/to"
            android:layout_toEndOf="@+id/from"
            android:backgroundTint="@color/black"
            android:src="@drawable/lane" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/from"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-341dp"
            android:fontFamily="@font/poppins_thin"
            android:text="SFO"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/from_full"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_thin"
            android:text="New York City"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/from_full"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="-56dp"
            android:fontFamily="@font/poppins_thin"
            android:text="20h"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/to_full"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="-177dp"
            android:fontFamily="@font/poppins_thin"
            android:text="San Fransisco"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/_date"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="-192dp"
            android:fontFamily="@font/poppins_thin"
            android:text="DATE"
            android:textColor="#8C8A93"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/free_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/_date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="-284dp"
            android:fontFamily="@font/poppins_thin"
            android:text="FREE TIME"
            android:textColor="#8C8A93"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/month"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="-192dp"
            android:fontFamily="@font/poppins_thin"
            android:text="Feb 25"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/_free_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/_date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="-284dp"
            android:fontFamily="@font/poppins_thin"
            android:text="4h"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/round1"
            android:layout_width="20dp"
            android:layout_height="29dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/round" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="215dp"
            android:layout_toEndOf="@+id/round1"
            android:background="@color/white"
            android:src="@drawable/line" />


        <ImageView
            android:id="@+id/round2"
            android:layout_width="29dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="190dp"
            android:layout_toEndOf="@+id/line"
            android:backgroundTint="@color/black"
            android:src="@drawable/round" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/terms"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="-284dp"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/poppins_thin"
            android:text="Terms and Conditions"
            android:textColor="@color/white"
            android:textFontWeight="800"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="255dp"
            android:layout_toEndOf="@id/terms"
            android:fontFamily="@font/poppins_thin"
            android:text="$500"
            android:textColor="@color/white"
            android:textFontWeight="800"
            android:textSize="16dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>